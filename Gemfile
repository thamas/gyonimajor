# Pull gems from RubyGems
source 'https://rubygems.org'

# ~> Refers to all versions of the given gem on the current full version number.
# For a specific version of a gem, remove the ~>
#
# gem 'toolkit', '~>1.2.2'
# gem 'singularitygs', '~>1.0.7'
# gem 'sassy-buttons', '~>0.2.0'
# gem 'css_parser', '~>1.3.4'
gem 'compass', '~> 1.0.1'
gem 'compass-normalize', '~> 1.5'
gem 'breakpoint', '~>2.5.0'

# Now that you're using Bundler, you need to run `bundle exec compass watch`
# instead of simply `compass watch`.
